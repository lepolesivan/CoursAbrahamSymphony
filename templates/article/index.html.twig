{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<div class="container pt-3">
    <h1 class="text-center">Liste des article</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td>{{ article.content }}</td>
                        <td>
                            <a href="{{ path('app_update_article' , {'id' : article.id}) }}" class="btn btn-warning">Modifier</a>                        
                            <a href="{{ path('app_delete_article' , {'id' : article.id}) }}" class="btn btn-danger">Supprimer</a>                        
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

</div>
{% endblock %}
